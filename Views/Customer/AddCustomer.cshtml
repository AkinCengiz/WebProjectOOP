@model WebProjectOOP.Entities.Customer
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Müşteri Ekleme</h1>
<form method="post">
    @Html.Label("Müşteri Adı Soyadı :")
    @Html.TextBoxFor(c => c.CustomerName, new { @class = "form-control"})
    <br/>
    @Html.Label("Müşterinin Şehri :")
    @Html.TextBoxFor(c => c.CustomerCity, new { @class = "form-control"})
    <br/>
    <button class="btn btn-primary">Müşteri Ekle</button>
</form>

